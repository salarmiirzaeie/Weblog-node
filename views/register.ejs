
    
<main  class="form-signin w-100 m-auto">
    <form action="/users/register" method="POST" class="p-4 rounded bg-white">
      <h1 class="h3 mb-3 fw-normal">ثبت نام</h1>
      <%-include("./includes/messages.ejs")%>
      <div class="form-floating">
        <label for="floatingInput">نام ونام خانوادگی</label>

        <input name="name" class="form-control" id="inputFullname">
      </div>
      <div class="form-floating">
        <label for="floatingInput">آدرس ایمیل</label>

        <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
      </div>
      <div class="form-floating">
        <label for="floatingPassword">کلمه عبور</label>

        <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
      </div>
      <div class="form-floating">
        <label for="floatingPassword">تکرارکلمه عبور</label>

        <input name="confirmpassword" type="password" class="form-control" id="floatingPassword" placeholder="ConfirmPassword">
      </div>
  
      <div class="checkbox mb-3">
        <a href="/users/login">اکانت دارم</a>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">ثبت نام</button>
    </form>
  </main>
  
  
      
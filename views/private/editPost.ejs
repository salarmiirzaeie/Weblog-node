<div style="margin-right: 300px;">
    <h2>ویرایش پست</h2>
    <div class="w-50 mx-auto">
        <%-include("../includes/messages.ejs")  %> 
    </div>
<form class="form-group" action="/dashboard/edit-post/<%=post._id  %> "class="w-50"method="POST">
<label>عنوان</label>
    <input type="text " value="<%=post.title  %> " class="form-control w-50"name="title"/>
    
<div class="input-group mt-3">
    <div class="input-group-prepend">
        <button class="btn btn-sm btn-secondary" type="button" id="imageUpload">
            آپلودعکس
        </button>
    </div>
    <div class="custom-file">
        <input type="file"class="custom-file-input"  id="selectedImage"/>
        <label id="imageStatus"class="custom-file-label" for="selectedImage">
            عکس روآپلودکن
        </label>

    </div>
   
      
</div>
<div id="progressDiv" style="display: none;">
    <div  class="progress" >
        <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"  aria-valuemin="0" aria-valuemax="100"></div>
      </div>
</div>
 
    <label>متن</label>

    <textarea class="form-control w-50"name="body"><%=post.body  %> </textarea>
    <label>وضعیت</label>
<select name="status"id="status"  class="form-control w-50">
    <!-- <option value="<%=post.status%>" selected><% post.status==="public"?"خصوصی":"عمومی" %> </option>
    <option value="<%=post.status==="public"?"private":"public"%> "><% post.status==="public"?"عمومی":"خصوصی" %> </option> -->
    <option value="public" selected>عمومی</option>
    <option value="private">خصوصی</option>
</select>
   
<div class="mt-2">
    <input type="submit"value="ویرایش"class="btn btn-success"/>
    <a href="/dashboard"class="btn btn-danger">انصراف</a>
</div>
  
</form>
</div>


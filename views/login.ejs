
    
<main  class="form-signin w-100 m-auto">
  <form action="/users/login" method="POST" class="p-4 rounded bg-white">
    <h1 class="h3 mb-3 fw-normal">ورود</h1>
    
    <div class="form-floating">
      <label for="floatingInput">آدرس ایمیل</label>

      <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
    </div>
    <div class="form-floating">
      <label for="floatingPassword">کلمه عبور</label>

      <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
    </div>
   
    <div class="checkbox mb-3">
      <input name="remember" type="checkbox" class="checkbox checkbox-inline mr-5">مرابه خواطربسپار</input>
    </div>
    <!-- <div class="g-recaptcha" data-sitekey="6LeEywMiAAAAACRlVPEpTY7DgUMblT7IzdEDd5D-"></div> -->

    <button class="w-100 btn btn-lg btn-primary" type="submit">ورود</button>
  </form>
</main>


    